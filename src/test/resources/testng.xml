<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="TeaTrees Suite" verbose="2">
    <test name="game">
        <groups>
            <define name="moves">
                <include name="nextMove" />
            </define>
            <run>
                <include name="moves" />
            </run>
        </groups>
        <classes>
            <class name="com.epam.prejap.teatrees.player.RandomPlayerTest" />
        </classes>
    </test>
    <test name="integration-test">
        <groups>
            <define name="jar-test">
                <include name="IT" />
            </define>
            <run>
                <include name="jar-test" />
            </run>
        </groups>
        <classes>
            <class name="com.epam.prejap.teatrees.JarIT" />
        </classes>
    </test>
    <test name="waiter">
        <groups>
            <define name="waiting-tests">
                <include name="waitSomeTime" />
            </define>
            <run>
                <include name="waiting-tests" />
            </run>
        </groups>
        <classes>
            <class name="com.epam.prejap.teatrees.game.WaiterTest"></class>
        </classes>
    </test>
    <test name="block">
        <groups>
            <define name="block-tests">
                <include name="blocks" />
            </define>
            <run>
                <include name="block-tests" />
            </run>
        </groups>
        <classes>
            <class name="com.epam.prejap.teatrees.block.ZBlockTest" />
        </classes>
    </test>
    
</suite>
